<div class="user-profile">
  <div class="left-section">
    <img src="<%= @user.photo %>" alt="User Photo">
  </div>
  <div class="right-section">
    <h1><%= @user.name %></h1>
    <h3>Number of posts: <%= @user.posts_counter %></h3>
  </div>
</div>

<div class="center-section">
  <div class="bio">
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>

  <% @user.recent_three_posts.each do |post| %>
      <div class="post">
    <a href="<%= user_post_path(@user, post) %>">
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
        <div class="counter">
          <span class="comments">Comments: <%= post.comments_counter %>, </span>
          <span class="likes">Likes: <%= post.likes_counter %></span>
        </div>
    </a>
      </div>
  <% end %>

  <a href="<%= user_posts_path(@user) %>" class="button">See all posts</a>
</div>
